  }
  
  try {
    console.log('üìù Texto a analizar:', ocrText.substring(0, 200) + '...');
    
    // === DETECCI√ìN DE CFDI (AN√ÅLISIS REAL) ===
    const cfdiKeywords = ['CFDI', 'UUID', 'FOLIO FISCAL', 'FACTURA ELECTR√ìNICA', 'SAT'];
